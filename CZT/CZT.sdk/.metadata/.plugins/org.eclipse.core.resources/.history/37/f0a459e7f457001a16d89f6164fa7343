#ifndef SRC_SPIFUNCTIONS_H_
#define SRC_SPIFUNCTIONS_H_

	#include "xparameters.h"

	#define CZT_DATA_RW_DATAIN_IN		XPAR_CZT_DATA_RW_BASEADDR
	#define CZT_DATA_RW_DATAOUT_OUT		XPAR_CZT_DATA_RW_BASEADDR+0x08U

	#define CZT_WR_REQ_WRITEREQ_OUT 	XPAR_CZT_WR_REQ_BASEADDR
	#define CZT_WR_REQ_READREQ_OUT		XPAR_CZT_WR_REQ_BASEADDR+0x08U

	#define CMD_OUT_ADDR_OUT			XPAR_CMD_OUT_BASEADDR

	#define FIFO_FULL_EMPTY_FULL_IN		XPAR_FIFO_FULL_EMPTY_BASEADDR
	#define FIFO_FULL_EMPTY_EMPTY_IN	XPAR_FIFO_FULL_EMPTY_BASEADDR+0x08U

	#define FIFO_READ_DATA_DOUT_IN		XPAR_FIFO_READ_DATA_BASEADDR
	#define FIFO_READ_DATA_RCLK_OUT		XPAR_FIFO_READ_DATA_BASEADDR+0x08U

	#define PS_GPIO0_RDAVAIL_IN			XPAR_PS7_GPIO_0_BASEADDR+0x0298U

	#define EVENTMODE  0xA000
	#define ENRGTHRESH 0xE000
	#define PIXENADIS  0xD000


	void initGPIO();
	void initUART();

	void writeConfigToCZT(u32,u32);
	u32  readConfigFromCZT(u32);

	u32  lookUpCmd(u32);
#endif /* SRC_SPIFUNCTIONS_H_ */
